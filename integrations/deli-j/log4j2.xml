<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-level [%t] %logger - %msg{nolookups}%n"/>
    </Console>
    <File name="File" fileName="${LOG_FILE}">
      <PatternLayout pattern="%d %-level [%t] %logger - %msg{nolookups}%n"/>
    </File>
  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="File"/>
    </Root>
    <Logger name="io.isima" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="io.isima.bios.deli.importer.CdcEventHandler" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>

    <!-- info logs are disabled for following verbose classes -->
    <Logger name="io.debezium.connector.mongodb" level="warn" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="org.mongodb.driver" level="warn" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="io.debezium.connector.postgres" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
  </Loggers>
</Configuration>
