{
  "contextName": "product",
  "missingAttributePolicy": "Reject",
  "attributes": [
    {"attributeName": "productId", "type": "Integer"},
    {"attributeName": "name", "type": "String"},
    {"attributeName": "category", "type": "String"},
    {"attributeName": "inventory", "type": "Integer"},
    {"attributeName": "targetAge", "type": "Integer"},
    {"attributeName": "targetGender", "type": "String", "allowedValues": ["Male", "Female"]},
    {"attributeName": "description", "type": "String"}
  ],
  "primaryKey": ["productId"],
  "auditEnabled": true,
  "features": [
    {
      "featureName": "byInventory",
      "dimensions": ["inventory"],
      "attributes": ["name", "category"],
      "indexed": true,
      "indexType": "RangeQuery",
      "featureInterval": 30000,
      "aggregated": true
    },
    {
      "featureName": "byTarget",
      "dimensions": ["targetGender", "targetAge"],
      "attributes": ["name"],
      "indexed": true,
      "indexType": "RangeQuery",
      "featureInterval": 30000
    }
  ]
}
