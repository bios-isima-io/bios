<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" shutdownHook="disable">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-level [%t] %logger{1.1.7} - %msg{nolookups}%n"/>
    </Console>
    <File name="File" fileName="${env:BIOS_HOME}/logs/server.log">
      <PatternLayout pattern="%d %-level [%t] %logger{1.1.7} - %msg{nolookups}%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="io.isima" level="info" additivity="false">
      <AppenderRef ref="File"/>
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="com.tieredfractals" level="info" additivity="false">
      <AppenderRef ref="File"/>
      <AppenderRef ref="Console"/>
    </Logger>
    <!-- Change this to debug level to log HTTP/2 frame handling details -->
    <Logger name="io.isima.bios2.server.Http2FrameHandler" level="info" additivity="false">
      <AppenderRef ref="File"/>
      <AppenderRef ref="Console"/>
    </Logger>
    <!-- Change this to debug level to log tfos data operations -->
    <Logger name="io.isima.bios.data.impl" level="info" additivity="false">
      <AppenderRef ref="File"/>
      <AppenderRef ref="Console"/>
    </Logger>
    <!-- Change this to debug level to dump operation metrics records  -->
    <Logger name="io.isima.bios.metrics.TfosMetrics" level="info" additivity="false">
      <AppenderRef ref="File"/>
      <AppenderRef ref="Console"/>
    </Logger>
    <!-- Change this to debug level to log operation error details  -->
    <Logger name="io.isima.bios2.server.services.RequestStream" level="debug" additivity="false">
      <AppenderRef ref="File"/>
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="io.netty" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="com.datastax.oss.driver.internal.core" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="File" level="debug"/>
      <AppenderRef ref="Console" level="warn"/>
    </Root>
  </Loggers>
</Configuration>
